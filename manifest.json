{
  "applications": {
    "gecko": {
      "id": "FANDOM-Monaco@tmkch.github.io"
    }
  },
  "manifest_version": 2,
  "name": "FANDOM Monaco",
  "version": "1.4.0",
  "description": "Integrate Monaco Editor into FANDOM.",
  "background": {
    "scripts": [
      "src/modules/browser-polyfill.js",
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wikia.com/wiki/*",
        "*://*.fandom.com/wiki/*"
      ],
      "js": [
        "src/modules/browser-polyfill.js",
        "src/content.js"
      ]
    }
  ],
  "web_accessible_resources": ["src/page.js"],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "*://*.wikia.com/*",
    "*://*.fandom.com/*",
    "webRequest",
    "tabs"
  ]
}